#!/bin/bash

term_prog="gnome-terminal --role=Irc -e"

CONFIG=${HOME}/.irc-connection

if [ "$(hostname)" != "alison" ]; then
  if [ -f ${CONFIG} ]; then
    source ${CONFIG}
  else
    echo "No config, try echo -e 'IRC_PORTS=1234:2345\nIRC_HOST=blah.com' > ~/.irc-connection"
    exit 1
  fi
  exec ${term_prog} "mosh -p $IRC_PORTS $IRC_HOST irc"
fi

if [ "$TERM" = "dumb" ]; then
    exec ${term_prog} "irc"
fi

TMUX_TMPDIR=/tmp/tmux-$(id -u) exec tmux attach-session -d -t IRC;

exit 0
