#!/bin/sh

cmd=$1
shift;

instance="${1:-vpn0}.sw1nn.com"

case $cmd in
    start)
        sudo /usr/bin/systemctl start openvpn-client@${instance}
        notify-send "openvpn" "${instance} starting"
        ;;
    stop)
        sudo /usr/bin/systemctl stop openvpn-client@${instance}
        notify-send "openvpn" "${instance} stopping"
        ;;
    *)
        echo "No Such command"
        ;;
esac
