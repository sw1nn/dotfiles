flag=sw1nn.allow-master
if test $(git config --type bool --default false ${flag}) = "true"; then
  exit 0
fi

if test $(git rev-parse --abbrev-ref HEAD) = "master" ; then
  # NOTE: prompt matches default magit-process-yes-or-no-prompt-regexp
  printf "Cannot commit to master by default. Override (y|n)? "
  read -k 1 yn
  case $yn in
    [Yy]) exit 0;;
    *) printf "\r\nAborted. To skip this check add git config with:\n\n\tgit config --add ${flag} --type bool true\n"; exit 1;;
  esac
fi

# Local Variables:
# mode: Shell-Script
# sh-indentation: 2
# indent-tabs-mode: nil
# sh-basic-offset: 2
# End:
