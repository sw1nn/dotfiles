[ ! -z "${GIT_ALLOW_MASTER}" ] && exit 0

if test $(git rev-parse --abbrev-ref HEAD) = "master" ; then
    echo -e "Cannot commit to master by default.\nIf you really think want to then do\n\n\tGIT_ALLOW_MASTER=1 git commit\n"
    exit 1
fi

